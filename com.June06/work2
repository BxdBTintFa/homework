import java.util.Scanner;

public class work2 {
    public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
                System.out.println("第2题：判断一个数的奇偶性");
		System.out.println("请输入一个数：");
		int a = input.nextInt();
		if (a % 2 == 0)
			System.out.println("这个数是偶数");
		else
			System.out.println("这个数是偶数");
	}
}